<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selectable_item_background
        </item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary_darker</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColorHint">@color/primary_darker</item>
        <item name="android:textColor">@color/primary_darker</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Action" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:dropDownSelector">@color/primary_darker</item>
        <!--<item name="android:divider">@color/white</item>-->
        <item name="android:overlapAnchor">true</item>
    </style>


</resources>