<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.gravitykerala.aurissample">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_aurislife"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:parentActivityName="in.gravitykerala.aurissample.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FirstPage" />
        </activity>
        <activity
            android:name=".FirstPage"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name=".Transaction"
            android:label="@string/title_activity_transaction"
            android:parentActivityName="in.gravitykerala.aurissample.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FirstPage" />
        </activity>
        <activity
            android:name=".RecentTransactions"
            android:label="@string/title_activity_recent_transactions"
            android:parentActivityName="in.gravitykerala.aurissample.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FirstPage" />
        </activity>
        <activity
            android:name=".PriscriptionDetails"
            android:label="@string/title_activity_priscription_details"
            android:parentActivityName="in.gravitykerala.aurissample.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FirstPage" />
        </activity>
        <activity
            android:name=".SplashPage"

            android:label="@string/title_activity_splash_page"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Uidtoken"
            android:label="@string/title_activity_uidtoken"></activity>
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password">
        </activity>
    </application>

</manifest>
