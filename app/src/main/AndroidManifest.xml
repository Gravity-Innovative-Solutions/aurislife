<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.gravitykerala.aurislife">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_aurislife"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="in.gravitykerala.aurislife.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.Profile"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.SignupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="in.gravitykerala.aurislife.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:parentActivityName="in.gravitykerala.aurislife.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.gravitykerala.aurislife.FirstPage" />
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.FirstPage"
            android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.Transaction"
            android:label="@string/title_activity_transaction"
            android:parentActivityName="in.gravitykerala.aurislife.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.gravitykerala.aurislife.FirstPage" />
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.RecentTransactions"
            android:label="@string/title_activity_recent_transactions"
            android:parentActivityName="in.gravitykerala.aurislife.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.gravitykerala.aurislife.FirstPage" />
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.PriscriptionDetails"
            android:label="@string/title_activity_priscription_details"
            android:parentActivityName="in.gravitykerala.aurislife.FirstPage"
            android:theme="@style/AppTheme.Dark">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.gravitykerala.aurislife.FirstPage" />
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.SplashPage"

            android:label="@string/title_activity_splash_page"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.gravitykerala.aurislife.Uidtoken"
            android:label="@string/title_activity_uidtoken"></activity>
        <activity
            android:name="in.gravitykerala.aurislife.ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password">
        </activity>

        <service android:name=".foregroundservice.ForegroundService"></service>
    </application>

</manifest>
